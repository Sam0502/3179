{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A map showing the number of trips and average expenditure per trip for different regions in 2023.",
    "width": 800,
    "height": 600,
    "projection": {
      "type": "mercator"
    },
    "layer": [
      {
        "data": {
          "url": "https://vega.github.io/vega-datasets/data/world-110m.json",
          "format": {
            "type": "topojson",
            "feature": "countries"
          }
        },
        "mark": {
          "type": "geoshape",
          "fill": "#f0f0f0",
          "stroke": "#888",
          "strokeWidth": 1.5
        }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/Sam0502/3179/refs/heads/main/test/raw_data/Table%2016.csv",
          "format": {
            "type": "csv"
          }
        },
        "transform": [
          {
            "filter": "datum.longitude != null && datum.latitude != null"
          }
        ],
        "mark": {
          "type": "circle",
          "opacity": 0.8,
          "stroke": "#0057e7",
          "strokeWidth": 0.8
        },
        "encoding": {
          "longitude": {"field": "longitude", "type": "quantitative"},
          "latitude": {"field": "latitude", "type": "quantitative"},
          "size": {"field": "`Trips_Year_2023`", "type": "quantitative", "scale": {"range": [10, 100]}},
          "color": {"field": "`Avg. expenditure per trip(2023)`", "type": "quantitative", "scale": {"scheme": "blues"}},
          "tooltip": [
            {"field": "Region", "type": "nominal", "title": "Region"},
            {"field": "`Trips_Year_2023", "type": "quantitative", "title": "Trips ('000) in 2023"},
            {"field": "`Avg. expenditure per trip(2023)`", "type": "quantitative", "title": "Avg. Expenditure per Trip (2023)"},
            {"field": "`Regional expenditure ($M)(2023)`", "type": "quantitative", "title": "Regional Expenditure ($M) in 2023"}
          ]
        }
      }
    ]
  }