{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A map showing regional data in Australia using new datasets, allowing the user to select between 2023 and 2024.",
  "width": 800,
  "height": 600,
  "projection": {
    "type": "mercator"
  },
  "params": [
    {
      "name": "year_filter_selected",
      "value": "2023",
      "bind": {
        "input": "select",
        "options": ["2023", "2024"],
        "labels": ["2023", "2024"],
        "name": "Select Year"
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://vega.github.io/vega-datasets/data/world-110m.json",
        "format": {
          "type": "topojson",
          "feature": "countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f0f0f0",
        "stroke": "#888",
        "strokeWidth": 1.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Sam0502/3179/refs/heads/main/test/new_geolocation.csv",
        "format": {
          "type": "csv"
        }
      },
      "transform": [
        {
          "lookup": "Country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Sam0502/3179/refs/heads/main/test/raw_data/Table%2018(1).csv",
              "format": {
                "type": "csv"
              }
            },
            "key": "Country",
            "fields": ["Year_2023", "Year_2024"]
          },
          "as": ["Trips_2023", "Trips_2024"]
        },
        {
          "lookup": "Country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Sam0502/3179/refs/heads/main/test/raw_data/Table%2018(2).csv",
              "format": {
                "type": "csv"
              }
            },
            "key": "Country",
            "fields": ["Year_2023", "Year_2024"]
          },
          "as": ["Visitor_Nights_2023", "Visitor_Nights_2024"]
        },
        {
          "lookup": "Country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Sam0502/3179/refs/heads/main/test/raw_data/Table%2018(3).csv",
              "format": {
                "type": "csv"
              }
            },
            "key": "Country",
            "fields": ["Year_2023", "Year_2024"]
          },
          "as": ["Expenditure_2023", "Expenditure_2024"]
        },
        {
          "calculate": "year_filter_selected == '2023' ? datum.Trips_2023 : datum.Trips_2024",
          "as": "Trips"
        },
        {
          "calculate": "year_filter_selected == '2023' ? datum.Visitor_Nights_2023 : datum.Visitor_Nights_2024",
          "as": "Visitor_Nights"
        },
        {
          "calculate": "year_filter_selected == '2023' ? datum.Expenditure_2023 : datum.Expenditure_2024",
          "as": "Expenditure"
        },
        {
          "filter": "datum.longitude != null && datum.latitude != null && datum.Trips != null && datum.Expenditure != null && datum.Trips > 0 && datum.Expenditure > 0"
        }
      ],
      "mark": {
        "type": "circle",
        "opacity": 0.8,
        "stroke": "#0057e7",
        "strokeWidth": 0.8
      },
      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "size": {
          "field": "Trips",
          "type": "quantitative",
          "title": "Trips ('000)",
          "scale": {
            "range": [10, 200],
            "zero": false
          }
        },
        "color": {
          "field": "Expenditure",
          "type": "quantitative",
          "title": "Expenditure ($M)",
          "scale": {
            "scheme": "blues",
            "domainMin": 0,
            "zero": false
          }
        },
        "tooltip": [
          {
            "field": "Country",
            "type": "nominal",
            "title": "Region"
          },
          {
            "field": "Trips",
            "type": "quantitative",
            "title": "Trips ('000)"
          },
          {
            "field": "Visitor_Nights",
            "type": "quantitative",
            "title": "Visitor Nights ('000)"
          },
          {
            "field": "Expenditure",
            "type": "quantitative",
            "title": "Expenditure ($M)"
          }
        ]
      }
    },
    {
      "data": {
        "values": [
          {"Country": "Indonesia", "longitude": 113.9213, "latitude": -0.7893, "annotation": "Most popular place"},
          {"Country": "USA", "longitude": -95.7129, "latitude": 37.0902, "annotation": "Most expenditure spent"}
        ]
      },
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5,
        "dy": -5,
        "fontSize": 12,
        "fontWeight": "bold",
        "color": "red"
      },
      "encoding": {
        "longitude": {
          "field": "longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude",
          "type": "quantitative"
        },
        "text": {
          "field": "annotation",
          "type": "nominal"
        }
      }
    }
  ]
}